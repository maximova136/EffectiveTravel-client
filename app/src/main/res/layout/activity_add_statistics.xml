<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_statistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.et.gui.AddStatisticsActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:rowCount="6">


            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Bus"
                android:textOff="Bus"
                android:id="@+id/bus_button"
                android:layout_gravity="center" />

            <ToggleButton
                android:textOn="Tr[am/oll]"
                android:textOff="Tr[am/oll]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/electro_button"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="center" />

            <ToggleButton
                android:textOn="Metro"
                android:textOff="Metro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/metro_button"
                android:layout_gravity="center" />

            <ToggleButton
                android:textOn="MINIBUS"
                android:textOff="MINIBUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minibus_button"
                android:layout_gravity="center" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:minHeight="20dp" />

            <Button
                android:text="@string/station_title"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:id="@+id/station_button"
                android:layout_width="250dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:minHeight="20dp" />

            <Button
                android:text="route"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:gravity="center_vertical|center_horizontal|center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/route_button_add" />

            <TimePicker
                android:layout_width="227dp"
                android:layout_height="432dp"
                android:id="@+id/timePicker"
                android:addStatesFromChildren="false"
                android:scrollbars="vertical"
                android:layout_columnSpan="4"
                android:timePickerMode="spinner"
                android:layout_gravity="bottom|center" />

        </GridLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_gravity="bottom|end"
            android:id="@+id/fab_send_stat"
            />
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
